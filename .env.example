# ============================================
# GIA AI BLOG BACKEND - ENVIRONMENT VARIABLES
# ============================================

# Server Configuration
NODE_ENV=development
PORT=5005
API_VERSION=v1

# Database (MySQL)
DATABASE_URL="mysql://root@localhost:3306/gia_ai_blog"
MYSQL_URL="mysql://root@localhost:3306/gia_ai_blog"

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_token_secret
JWT_REFRESH_EXPIRES_IN=30d

# ============================================
# OPENAI API - REQUIRED FOR AI NORMALIZATION
# ============================================
# Get your API key from: https://platform.openai.com/api-keys
# Replace 'sk-your-openai-api-key-here' with your actual key

OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o

# ============================================
# SCRAPING CONFIGURATION
# ============================================

# Fashion Hashtags for Scraping (comma-separated)
FASHION_HASHTAGS=fashion,fashiontrends,streetstyle,ootd,fashionweek,fashionblogger,runway,designer

# Scraping Configuration
SCRAPING_INTERVAL_MINUTES=360
MAX_POSTS_PER_SCRAPE=100
SCRAPING_ENABLED=true

# ============================================
# SECURITY & RATE LIMITING
# ============================================

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Origins (comma-separated)
CORS_ORIGIN=http://localhost:5004,http://localhost:5173,https://gia-frontend-mvp.vercel.app

# ============================================
# LOGGING
# ============================================

LOG_LEVEL=info
LOG_FILE=logs/app.log

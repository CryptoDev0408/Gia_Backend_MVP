# Server Configuration
NODE_ENV=development
PORT=5005
API_VERSION=v1

# Database (MySQL)
DATABASE_URL="mysql://user:password@localhost:3306/gia_ai_blog"
MYSQL_URL="mysql://user:password@localhost:3306/gia_ai_blog"

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_token_secret
JWT_REFRESH_EXPIRES_IN=30d

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# Social Media APIs
# Twitter/X API
SOCIAL_TWITTER_API_KEY=your_twitter_api_key
SOCIAL_TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_SECRET=your_twitter_access_secret

# Instagram API (using unofficial scraping - no official API for posts)
SOCIAL_INSTAGRAM_API_USERNAME=your_instagram_username
SOCIAL_INSTAGRAM_API_PASSWORD=your_instagram_password
INSTAGRAM_USERNAME=your_instagram_username
INSTAGRAM_PASSWORD=your_instagram_password

# Scraping Configuration
SCRAPING_INTERVAL_MINUTES=360
MAX_POSTS_PER_SCRAPE=100
SCRAPING_ENABLED=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:5004,http://localhost:5173,https://gia-frontend-mvp.vercel.app

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
